<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SesionFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Usuario"
        android:gravity="center_horizontal">
    </TextView>

    <EditText
        android:id="@+id/etusuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese su Usuario"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:drawableLeft="@drawable/ic_baseline_verified_user_24">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Password"
        android:gravity="center_horizontal">
    </TextView>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese su Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_baseline_lock_24">
    </EditText>

    <Button
        android:id="@+id/btniniciarsesion"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal">
    </Button>

    <TextView
        android:id="@+id/tvregistrarseaqui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Registrarse AQUÍ"
        android:textColor="#0B2CE4">
    </TextView>
</LinearLayout>